{
  "name": "honeycomb",
  "version": "7.13.7",
  "scripts": {
    "clean": "node scripts/clean.js",
    "css:sass": "node scripts/css/sass.js",
    "css:autoprefixer": "node node_modules/postcss-cli/bin/postcss --no-map true --use autoprefixer -c scripts/css -r dist/honeycomb.css",
    "css": "npm run css:sass && npm run css:autoprefixer",
    "fonts": "node scripts/fonts.js",
    "images": "node scripts/images.js",
    "js:bundle": "node scripts/javascript/bundle.js",
    "js:minify": "node scripts/javascript/minify.js",
    "js:lint": "node node_modules/eslint/bin/eslint src/**/js",
    "js:vendor": "node scripts/javascript/vendors.js",
    "js": "npm run js:lint && npm run js:bundle && npm run js:minify && npm run js:vendor",
    "build": "npm run clean && npm run css && npm run fonts && npm run images && npm run js"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "eslint": "^3.19.0",
    "fs-extra": "^3.0.1",
    "glob": "^7.1.1",
    "node-sass": "^4.5.2",
    "postcss-cli": "^4.0.0",
    "uglify-js": "^3.0.6"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "project": {
    "src": "src",
    "dist": "dist"
  }
}
